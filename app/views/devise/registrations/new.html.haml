= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .container
    .d-flex.justify-content-center.h-100
      .card
        .card-header
          %h3 Sign Up
          .d-flex.justify-content-end.social_icon
            %span
              %i.fab.fa-facebook-square
            %span
              %i.fab.fa-google-plus-square
        .card-body
          %form
            .input-group.form-group
              .input-group-prepend
                %span.input-group-text
                  %i.fas.fa-envelope
              = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'email', required: true
            .input-group.form-group
              .input-group-prepend
                %span.input-group-text
                  %i.fas.fa-user
              = f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'username', required: true
            .input-group.form-group
              .input-group-prepend
                %span.input-group-text
                  %i.fas.fa-key
              = f.password_field :password, class: 'form-control', placeholder: 'password'
            .input-group.form-group
              .input-group-prepend
                %span.input-group-text
                  %i.fas.fa-key
              = f.password_field :password_confirmation, class: 'form-control', placeholder: 'password confirmation'
            .form-group
              = f.submit 'Sign Up', class: 'btn float-right login_btn'
        .card-footer
          .d-flex.justify-content-center.links
            Already have an account?
            = link_to 'Sign in', session_path(resource_name)
