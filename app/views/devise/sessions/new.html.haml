= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .container
    .d-flex.justify-content-center.h-100
      .card
        .card-header
          %h3 Sign In
          .d-flex.justify-content-end.social_icon
            %span
              %i.fab.fa-facebook-square
            %span
              %i.fab.fa-google-plus-square
        .card-body
          %form
            .input-group.form-group
              .input-group-prepend
                %span.input-group-text
                  %i.fas.fa-user
              = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'email'
            .input-group.form-group
              .input-group-prepend
                %span.input-group-text
                  %i.fas.fa-key
              = f.password_field :password, class: 'form-control', placeholder: 'password'
            .row.align-items-center.remember
              = f.check_box :remember_me
              Remember Me
            .form-group
              = f.submit 'Sign in', class: 'btn float-right login_btn'
        .card-footer
          - if devise_mapping.registerable?
            .d-flex.justify-content-center.links
              Don't have an account?
              = link_to 'Sign up', new_registration_path(resource_name)
          - if devise_mapping.rememberable?
            .d-flex.justify-content-center
              = link_to "Forgot your password?", new_password_path(resource_name)
